<html>
<head>
    <title>Kakuro</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ asset('css/kakuro.css') }}" />
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.0/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.0/JSXTransformer.js"></script>
</head>
<body>
kakuro <br/><br/>
    {% for i, row in data %}
        {% for j, cell in row %}
            {% if i == 0 or j == 0 %}
                {% if cell == '' %}
                    <div class='dv blnk'>&nbsp;</div>
                {% else %}
                    <div class='dv sum-box'>{{ cell }}</div>
                {% endif %}
            {% else %}
                {% if cell == '' %}
                    <div class='dv'>&nbsp;</div>
                {% else %}
                    {% if cell == '\\' %}
                        <div class='dv blnk'></div>
                    {% else %}
                        <div class='dv sum-box'>{{ cell }}</div>
                    {% endif %}
                {% endif %}
            {% endif %}
        {% endfor %}
        <br class='clr'/>
    {% endfor %}
</body>
</html>